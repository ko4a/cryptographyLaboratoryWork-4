<Window x:Class="slavaCryptoApp.VerifySignatureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:slavaCryptoApp"
        mc:Ignorable="d"
        Title="Ввод подписи" Height="200" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="123*"/>
            <RowDefinition Height="26*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontStyle="Italic" Text="Введите подпись в base64!"></TextBlock>
        <TextBox Grid.Row="1" Background="WhiteSmoke" TextWrapping="Wrap" x:Name="signature"></TextBox>
        <Button Background="Wheat" Click="ButtonClick" Content="ТЫК" Grid.Row="2"></Button>
    </Grid>
</Window>
